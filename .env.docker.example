# StockViewer Docker Environment
# Copy to .env.docker and fill in values:
#   cp .env.docker.example .env.docker

# PostgreSQL (defaults work out of box)
POSTGRES_USER=stockviewer
POSTGRES_PASSWORD=stockviewer123
POSTGRES_DB=stockviewer

# Authentication (REQUIRED)
# Generate with: openssl rand -base64 32
AUTH_SECRET=CHANGE_ME

# Your domain (or http://localhost:3000 for local)
AUTH_URL=https://your-domain.com

# GitHub OAuth (REQUIRED for login)
# Create at: https://github.com/settings/developers
# Callback URL: {AUTH_URL}/api/auth/callback/github
AUTH_GITHUB_ID=CHANGE_ME
AUTH_GITHUB_SECRET=CHANGE_ME

# Google OAuth (optional)
# AUTH_GOOGLE_ID=
# AUTH_GOOGLE_SECRET=

# Cloudflare Tunnel (optional - for external access)
# CLOUDFLARE_TUNNEL_TOKEN=
